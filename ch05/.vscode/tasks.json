{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "tsc",
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": true,
            "isBuildCommand": true
        },
        {
            "taskName": "watch",
            "command": "tsc",
            "isShellCommand": true,
            "showOutput": "always",
            "args": [
                "-w", "-p", "."
            ],
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "run",
            "command": "node",
            "args": [
                "hello_ch05.js"
            ],
            "showOutput": "always",
            "isShellCommand": true
        }
    ]
}